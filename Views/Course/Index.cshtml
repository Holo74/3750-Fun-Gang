@model Assignment_1.Models.ClassUserAssignments

@{
    ViewData["Title"] = "Course";
}

<div class="text-center">
    <h1>@Model.Class.CourseName</h1>
</div>
<div class="class" >
   <a asp-action="Create" asp-route-classId = "@Model.Class.ClassId" >Create New Assignment</a>
  @*  <a href="@Url.Action("Index", "ClassAssignments",  { classID = item.ClassId })">*@
</div>







<table class="table">
    <thead>
        <tr>
            <th>
                Class ID
            </th>
     <th>
      Assignment title
     </th>

    <th>
        Due Date
    </th>

    <th>
        Due Time
    </th>
     <th>
       Submission Type
   </th>
    </tr>
    </thead>
   @* <th>
        <tr>
            <td>
                Name
            </td>
            <td>
                Day Due
            </td>
            <td>
                Time Due
            </td>
        </tr>
   *@
    <tbody>
        @foreach (var item in Model.Assignments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelData => item.ClassId);
                </td>
                <td>
                    @Html.DisplayFor(modelData => item.AssignmentTitle);
                </td>
                <td>
                    @Html.DisplayFor(modelData => item.DueDate);
                </td>
                <td>
                    @Html.DisplayFor(modelData => item.DueTime);
                </td>
                @if (ViewData["Student"] != null)
                {
                    @if (ViewData["Student"].ToString() != "Student")
                    {
                        <td>
                            <button class="btn btn-primary">
                                Edit
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-primary">
                                Delete
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-primary">
                                Submissions
                            </button>
                        </td>
                    }
                    else
                    {
                        <td>
                            <button class="btn btn-primary">
                                Submit
                            </button>
                        </td>
                    
                    }
                    
                }
            </tr>
        }
    </tbody>
</table>
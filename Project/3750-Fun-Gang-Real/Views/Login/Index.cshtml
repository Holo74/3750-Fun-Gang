@model Assignment_1.Models.User
@{
	ViewData["Title"] = "Login";
}

<div class="text-center d-flex justify-content-center">
	<div style="width:20vw">
		<form asp-controller="Login" asp-action="Validate">
			<div class="d-flex justify-content-between">
				<label asp-for="Email">Email:</label><input asp-for="Email" name="Email" type="text" />
			</div>
			<div class="d-flex justify-content-between">
				<label asp-for="Password">Password:</label><input asp-for="Password" name="Password" type="text" />
			</div>
			<br />
			<input value="Log in" type="submit" class="btn btn-primary" />
		</form>
		<hr />
		<a class="btn btn-dark" asp-controller="Users" asp-action="Create">Create a new Account</a>
	</div>
</div>
